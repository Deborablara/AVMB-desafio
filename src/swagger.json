{
  "openapi": "3.0.1",
  "info": {
    "title": "Desafio da AVMB",
    "description": "Documentação de rotas da API do desafio da AVMB",
    "version": "1.0.0"
  },
  "basePath": "/",
  "paths": {
    "/api/usuario/id": {
      "post": {
        "summary": "Traz o ID do usuário com base nos parâmetros fornecidos",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "Token de integração de API do usuário fornecido na plataforma asten"
                  },
                  "params": {
                    "type": "object"
                  }
                },
                "required": [
                  "token",
                  "params"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Usuario": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
