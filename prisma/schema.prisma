
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Envelope {
  id String @id @default(uuid())
  id_envelope_api String @unique
  id_repositorio_api String
  descricao String 
  conteudo String
  criado_em DateTime @default(now())
  status String
  documentos Documento[] 
  envelopes_signatario Envelope_signatario[]


  @@map("envelopes")
}

model Documento {
  id String @id @default(uuid())
  envelope Envelope @relation(fields: [id_envelope], references: [id])
  id_envelope String
  nome_arquivo String 
  conteudo String


  @@map("documentos")
}

model Signatario {
  id String @id @default(uuid())
  id_signatario_api String @unique
  nome String
  email String @unique
  envelope_signatario Envelope_signatario[] 

  @@map("signatarios")
}

model Envelope_signatario {
  id String @id @default(uuid())
  signatario Signatario @relation(fields: [id_signatario], references: [id]) 
  id_signatario String
  envelope Envelope @relation(fields: [id_envelope], references: [id]) 
  id_envelope String



  @@map("envelopes_signatarios")
}
